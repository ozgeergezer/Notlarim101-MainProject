
@{
    ViewBag.Title = "RegisterOK";
}

<link href="~/Content/Login-RegisterStyle.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="logreg">
        <main class="form-signin">
            <form>
                <img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Yonlendiriliyorsunuz...</h1>
                <div class="text-success">
                    <h2>
                        <span>Kayit oldunuz</span>
                    </h2>
                    <hr />  
                    <p class="text-justify">
                        lütfen e-posta adresine gonderdiğimiz aktivasyon linkine tıklayarak hesabınızı aktive ediniz.
                    </p>
                </div>
            </form>
        </main>
    </div>
}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("footer").hide();
        $("header").hide();
        $("#category1").hide();
        $("#category3").addClass("col-md-12").removeClass("col-md-10");
        setTimeout(function () {
            window.location = "/Home/Index";
        }, 3000);
    });
</script>